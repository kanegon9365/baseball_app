<div class="hitters-box">
  <table>
    <tr>
      <th>選手名</th><th>年齢</th><th>チーム名</th><th>リーグ名</th><th>打率</th><th>OPS</th><th><%= sortable "the_bat", "打席" %></th><th><%= sortable "at_bat", "打数" %></th><th><%= sortable "hit", "ヒット" %></th><th><%= sortable "second_base", "二塁" %></th><th><%= sortable "third_base", "三塁" %></th><th><%= sortable "hr", "本塁打" %></th><th><%= sortable "total_base", "塁打" %></th><th><%= sortable "run_batted_in", "打点" %></th><th><%= sortable "bases_on_ball", "四球" %></th><th><%= sortable "strike_out", "三振" %></th><th><%= sortable "stolen_base", "盗塁" %></th>
    </tr>
    <% @hitter18s.each do |h| %>
      <tr>
      <td><%= link_to h.name, hitter18_path(h.id) %></td>
      <td><%= h.player.age %></td>
      <td><%= h.team18.name %></td>
      <td><%= h.league18.name %></td>
      <td><%= h.average %></td>
      <td><%= h.ops %></td>
      <td><%=h.the_bat %></td>
      <td><%= h.at_bat %></td>
      <td><%= h.hit %></td>
      <td><%= h.second_base %></td>
      <td><%= h.third_base %></td>
      <td><%= h.hr %></td>
      <td><%= h.total_base %></td>
      <td><%= h.run_batted_in %></td>
      <td><%= h.bases_on_ball %></td>
      <td><%= h.strike_out %></td>
      <td><%= h.stolen_base %></td>
      </tr>
    <% end %>
  </table>
</div>
